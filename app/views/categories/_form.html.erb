<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1 class="text-center"><%= action %> category</h1>

      <%= form_for(@category) do |category| %>
        <% if @category.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@category.errors.count, "error") %> prohibited this @category from being saved:</h2>

            <ul>
              <% @category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= category.label :name %>
          <%= category.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= category.label :description %>
          <%= category.text_area :description, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= link_to 'Cancel', categories_path, class: 'btn btn-danger' %>
          <%= category.submit 'Save category', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
